<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
  <title>Blog</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    .blogContainer {

      width: 100%;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      /* align-items: center; */
      justify-content: center;
    }

    .blog {
      width: 100%;
      margin: 10px;
      text-align: center;
      object-fit: cover;
      /* box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px; */
    }

    h1 {
      margin-top: 20px;
      margin-bottom: 30px;
    }

    .coverImg {
      width: 400px;
      height: 300px;
      margin-bottom: 15px;
    }

    .cmntContainer {
      width: 500px;
      margin-left: 20px;
    }


    .cmntImg {
      margin-right: 5px;
      width: 50px;
    }

    .addCmnt {
      margin-left: 45px;
      margin-bottom: 50px;
    }

    .content {
      width: 500px;
      border: none;
      border-bottom: solid 1px black;
      outline: none;
    }

    .cmntBtn {
      border: none;
      outline: none;
      color: white;
      background-color: rgb(82, 81, 81);
      padding: 3px;
      width: 55px;
      border-radius: 5px;
      margin: 5px;
    }

    .blogCmntContainer {
      width: 500px;
    }

    .blogCmnt {
      display: flex;
      align-items: center;
      margin: 10px;
    }
  </style>
</head>

<body>
  <%- include("./partials/nav") %>
  <div class="blogContainer">
    <div class="blog">
      <h1><%= blog.title %></h1>
      <img class="coverImg" src="<%= blog.coverImgUrl %>" alt="">
      <p><%= blog.body %></p>
    </div>
    <div class="cmntContainer">
      <img class="cmntImg" src="<%= blog.createdBy.profileImgUrl %>" alt="">
      <span><%= blog.createdBy.fullName %></span>
    </div>
  </div>
  <div class="addCmnt">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post">
      <input type="text" class="content" name="content" placeholder="Enter your comment">
      <button class="cmntBtn" type="submit">Add</button>
    </form>

    <% } %>
    <div class="blogCmntContainer">
      <% comments.forEach(comment => { %>
      <div class="blogCmnt">
        <img class="cmntImg" src="<%= comment.createdBy.profileImgUrl %>" alt="">
        <div class="cmntContent">
          <span><strong><%= comment.createdBy.fullName %>: </strong><%= comment.content%></span>
        </div>
      </div>
      <% }) %>
    </div>

  </div>
  <%- include("./partials/scripts") %>
</body>

</html>