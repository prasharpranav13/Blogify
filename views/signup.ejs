<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
  <title>Signup</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;

    }

    .bodyContainer {
      width: 100%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      margin-top: 20px;
      margin-bottom: 30px;
      color: rgb(250, 135, 20);
    }

    .formContainer {
      text-align: center;
      height: 400px;
      width: 300px;
      padding: 10px;
      box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
      border-radius: 5px;
    }

    label {
      /* text-align: center; */
    }

    .inp {
      width: 80%;
      margin: 5px;
      border: none;
      border-bottom: solid 1px black;
      padding: 5px;
    }

    .item {
      text-align: left;
      margin-left: 30px;
      margin-top: 5px;
    }

    .btn {
      cursor: pointer;
      border: none;
      border-radius: 2px;
      width: 80%;
      margin: 10px;
      margin-top: 20px;

      padding: 8px;
      background: rgb(250, 135, 20);
      color: white;
      font-weight: 400;
    }

    .btn:hover {
      background: rgb(240, 121, 3);
    }

    .inp {
      outline: none;
    }

    .inp::placeholder {
      color: rgb(202, 197, 197);
    }
  </style>
</head>

<body>
  <%- include("./partials/nav") %>
  <div class="bodyContainer">
    <div class="formContainer">
      <h2>Signup</h2>
      <form action="/user/signup" method="post">
        <div class="inputBox">
          <div class="item">
            <label for="fullName">Full Name</label>
          </div>
          <input type="text" placeholder="John Doe" class="inp" name="fullName" id="fullName">
          <div class="item">
            <label for="email">Email</label>
          </div>
          <input type="email" placeholder="abc@gmail.com" class="inp" name="email" id="email">
          <div class="item">
            <label for="password">Password</label>
          </div>
          <input type="text" placeholder="xxxxxx" class="inp" name="password" id="password">
        </div>
        <button type="submit" class="btn">Signup</button>
      </form>
    </div>
  </div>
  <%- include("./partials/scripts") %>
</body>

</html>